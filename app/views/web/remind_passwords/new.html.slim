= content_for :meta do
  meta content='webiste' property='og:type'
  meta content=title property='og:title'
  meta content=new_remind_password_url property='og:url'
  meta content=image_url('logo.png') property='og:image'
  link rel='canonical' href=new_remind_password_url
  meta content=t('.meta_description') property='og:description'
  meta content=t('.meta_description') name='description'
  meta content="#{I18n.locale}" property='og:locale'

.container.mt-sm-5.mb-5
  .row.justify-content-center
    .col-sm-8.col-md-7.col-lg-6
      .card
        .card-body.p-4.p-lg-5
          h1.h3.mb-4.text-center = t('.forgot_password')
          = simple_form_for @remind_password_form, url: remind_password_path, wrapper: :floating_labels_form do |f|
            = f.input :email
            = f.submit class: 'btn btn-lg btn-primary w-100'
          .text-center.mt-3
            = t('.trying_to_login')
            = link_to t('.login'), new_session_path, class: 'ms-1'
        .card-footer.text-center.p-3.p-md-4
            = t('.dont_have_account')
            = link_to t('.register'), new_user_path, class: 'ms-1'
